<div class="flex flex-col justify-center items-center min-h-screen px-6">
  <div class="flex flex-col md:flex-row border border-grey-600 rounded bg-white shadow-md w-full md:w-3/4">
    <div class="flex-1 p-4 border-b md:border-b-0 md:border-r border-grey-600 bg-green-100">
      <div class="max-w-xs mx-auto mb-6">
        <%= image_pack_tag "airport_gap_logo.png" %>
      </div>

      <p>
        Set up a new password for your Airport Gap account.
      </p>
    </div>

    <div class="flex-1 m-4">
      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-3 py-2 rounded relative mb-4" role="alert">
          <span class="block sm:inline font-bold">There were some problems generating your token:</span>
          <ul class="list-inside list-disc mt-2">
            <% @user.errors.full_messages.each do |msg| %>
              <li class="ml-4"><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h1 class="text-lg font-bold mb-6">Set up a new password</h1>

      <%= form_for @user, url: password_reset_path(password_reset_token: params[:password_reset_token]) do |f| %>
        <div class="mb-4">
          <%= f.label :password, "Password", class: "font-bold block mb-1" %>
          <%= f.password_field :password, class: "shadow appearance-none border border-grey-200 rounded w-full py-2 px-3 text-grey-700 leading-tight focus:outline-none focus:ring" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "Confirm your password", class: "font-bold block mb-1" %>
          <%= f.password_field :password_confirmation, class: "shadow appearance-none border border-grey-200 rounded w-full py-2 px-3 text-grey-700 leading-tight focus:outline-none focus:ring" %>
        </div>

        <div class="flex justify-end">
          <%= f.submit "Reset Your Password", class: "w-full md:w-auto px-4 py-2 bg-green-500 hover:bg-green-700 rounded-lg text-white font-bold focus:outline-none focus:ring" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
