<div class="border-t-8 border-green-500">
  <div class="container mx-auto px-6">
    <div class="mx-auto max-w-xl mb-4">
      <%= image_pack_tag "airport_gap_logo.png" %>
    </div>

    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-3 py-2 rounded relative mb-4 w-full md:w-1/2 mx-auto" role="alert">
        <span class="block sm:inline"><%= flash[:notice] %></span>
      </div>
    <% end %>

    <div class="border border-grey-600 rounded bg-white shadow-md w-full md:w-1/2 mx-auto p-4">

      <h1 class="text-xl font-bold text-center mb-4">Your Account Information</h1>

      <p id="user_email_address" class="mb-1">
        <strong>Email Address:</strong> <%= current_user.email %>
      </p>

      <p id="user_auth_token" class="mb-1">
        <strong>Authentication Token: </strong> <%= current_user.token %>
      </p>

      <div class="mb-6">
        <%= button_to "Regenerate Authentication Token", regenerate_tokens_path, class: "px-4 py-2 bg-green-500 hover:bg-green-700 rounded-lg text-white font-bold focus:outline-none focus:ring" %>
      </div>

      <p>
        <%= link_to "Change Password", change_password_path, class: "underline text-green-600 hover:text-green-900" %>
      </p>

      <p>
        <%= link_to "API Documentation", docs_path, class: "underline text-green-600 hover:text-green-900" %>
      </p>

      <p>
        <%= link_to "Sign Out", logout_path, method: :delete, class: "underline text-green-600 hover:text-green-900" %>
      </p>
    </div>
  </div>
</div>
