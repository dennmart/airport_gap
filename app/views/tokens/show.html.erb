<div class="border-t-8 border-green-500">
  <div class="container mx-auto px-6">
    <div class="mx-auto max-w-xl mb-4">
      <%= image_pack_tag "airport_gap_logo.png" %>
    </div>

    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-3 py-2 rounded relative mb-4 w-full md:w-1/2 mx-auto" role="alert">
        <span class="block sm:inline"><%= flash[:notice] %></span>
      </div>
    <% end %>

    <div class="border border-grey-600 rounded bg-white shadow-md w-full md:w-1/2 mx-auto p-4">

      <h1 class="text-xl font-bold text-center mb-4">Your Account Information</h1>

      <p class="mb-1">
        <strong>Email Address:</strong> <%= current_user.email %>
      </p>

      <p class="mb-1">
        <strong>Authentication Token: </strong> <%= current_user.token %>
      </p>

      <%= button_to "Regenerate Authentication Token", regenerate_tokens_path, class: "px-4 py-2 bg-green-500 hover:bg-green-700 rounded-lg text-white font-bold focus:outline-none focus:shadow-outline mb-4" %>

      <p>
        API Documentation
      </p>

      <p>
        Sign Out
      </p>
    </div>
  </div>
</div>